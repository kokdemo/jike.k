{
    "name": "jike.k",
    "version": "0.0.6",
    "manifest_version": 2,
    "description": "更好的即刻网页版浏览体验",
    "homepage_url":"https://github.com/kokdemo/jike.k",
    "icons": { 
        "16": "jike16.png",
        "48": "jike48.png",
        "128": "jike128.png"
    },
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "content_scripts": [ 
        {
            "matches": [
                "https://web.okjike.com/topic/*",
                "https://web.okjike.com/*",
                "https://web.okjike.com/post-detail/*"
            ],
            "css": [],
            "js": [
                "jike.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://web.okjike.com/topic/*"
    ]
}